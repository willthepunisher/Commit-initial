<Window x:Class="Bourses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bourses"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ToolBarTray>
            <ToolBar>
                <Button Content="Proprio" Click="cmdProprio"></Button>
                <Button Content="Sociétés" Click="cmdSociete"></Button>
                <Button Content="Transaction" Click="cmdTransaction"></Button>
                <Button Content="Quitter" Click="cmdQuitter"></Button>
            </ToolBar>
        </ToolBarTray>
        <Image Source="/images/logoBourse.jpg" Grid.Row="1" Stretch="Fill" Name="IMGlogo"></Image>
        <ContentPresenter Grid.Row="1" Name="presenteurContenu"></ContentPresenter>
    </Grid>
</Window>
